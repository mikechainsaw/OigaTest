
@model OigaTest.Models.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    string tenantName = @ViewBag.TenantName;
}

<style>
    .companylogo {
        max-width: 800px;
        max-height: 500px;
    }
</style>
<div class="text-center">
    <h1 class="display-4">Login To @tenantName</h1>
    <img src="~/images/@(tenantName.ToLower()).png" class="companylogo" />
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>


